<html>
<head>
  <title>Web Dev Practice</title>
  <link rel="stylesheet" href="style.css"/>
  <script src="home.js"></script>
  <link rel="stylesheet" href="home.css"/>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&family=Sintony:wght@400;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inria+Serif:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Libre+Caslon+Display&family=Prociono&family=Quicksand:wght@300..700&family=Sintony:wght@400;700&display=swap" rel="stylesheet">
  <style>
    .home {
      font-weight: bold;
    }
  </style>
</head>

<%- include('nav') %>

<body>

<div class="intro_section" id="intro_image">
  <div class="intro_content">
    <div class="welcome">
      <p class="welcome_text">
        A collection of student demonstrations of their work in the Computer Science program
at Phillips Academy Andover. In each course, students focus on two of the fifteen
Computer Science Skills to shape their work throughout the course, and they document
that growth here.
      </p>
      <p class="welcome_text">
        Use the search functionality to explore the collection. Browse by skills, student, or course.
      </p>
    </div>

  <!-- includes the search bar and tagging system-->
    <div class="search_bar_section">
      <div class="search_bar_box">
        <div class="search_bar">
          <img id="search_image" src="https://cdn-icons-png.flaticon.com/512/61/61088.png">
          <input type="text" id="search_bar" placeholder="Hashtag Search ... " onkeyup="search()">
          <div id="tag_panel_of_search">
            <!-- when the tag panel is opened, the tags (as buttons) are all displayed-->
            <button class="tag_button" onclick="insertTag('CSC403', 'computerScienceClasses')">CSC403</button>
            <button class="tag_button" onclick="insertTag('CSC573', 'computerScienceClasses')">CSC461</button>
            <button class="tag_button" onclick="insertTag('CSC580', 'computerScienceClasses')">CSC471</button>
            <button class="tag_button" onclick="insertTag('CSC600', 'computerScienceClasses')">CSC552</button>
            <button class="tag_button" onclick="insertTag('CSC561', 'computerScienceClasses')">CSC561</button>
            <button class="tag_button" onclick="insertTag('CSC562', 'computerScienceClasses')">CSC562</button>
            <button class="tag_button" onclick="insertTag('CSC573', 'computerScienceClasses')">CSC573</button>
            <button class="tag_button" onclick="insertTag('CSC600', 'computerScienceClasses')">CSC600</button>
            <button class="tag_button" onclick="insertTag('Introductory', 'courseLevel')">Introductory</button>
            <button class="tag_button" onclick="insertTag('Intermediate', 'courseLevel')">Intermediate</button>
            <button class="tag_button" onclick="insertTag('Advanced', 'courseLevel')">Advanced</button>
            <button class="tag_button" onclick="insertTag('Independent Research', 'courseLevel')">Independent Research</button>
            <button class="tag_button" onclick="insertTag('Collaboration', 'skills')">Collaboration</button>
            <button class="tag_button" onclick="insertTag('Writing Code', 'skills')">Writing Code</button>
            <button class="tag_button" onclick="insertTag('Questioning Impact', 'skills')">Questioning Impact</button>
          </div>
          <img id="microphone_image" src="https://www.iconpacks.net/icons/1/free-microphone-icon-342-thumb.png">
        </div>
      </div>

      
    </div>
    
    
    
  </div>
</div>
    
        
<!--   video section -->
<div class="highlights">
  <h1 class = "highlights_text">Recent Exhibition of Learning</h1>
    <div class="video_highlights">
      <% if (exhibitions.length > 0) {
        exhibitions.forEach(function(exhibition) {
          %>
          <div class="video">
          <div class="video_thumbnail"><%-exhibition.video_html_code%>
          </div>
          <div class="video_tags"><%=exhibition.course_number%>: <%=exhibition.course_name%>
            <%
              exhibition.skills.forEach(function(skill) {
                %>
                | <%=skill%>
                <%
              })
            %>
          </div>
          <div class="video_text">
            <div class="student_name"><%= exhibition.first_name %> <%= exhibition.last_name %></div>
            <div class="upload_date">
              <% if (exhibition.term == 1) {
                %>
                Fall Term, 
                <%
              } else if (exhibition.term == 2) {
                %>
                Winter Term, 
                <%
              } else if (exhibition.term == 3) {
                %>
                Spring Term, 
                <%
              }%>
              <%= exhibition.academic_year%> 
            </div>
          </div>
        </div>
        <%
      })
    }
    %>
  </div>
</div>

  </body>
    
  <%- include('foot') %>
  
  
</html>