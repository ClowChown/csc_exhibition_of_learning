<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta charset="utf-8">
  <title>EoL Search Results</title>
  <link rel="stylesheet" href="search-results.css">
  <link rel="stylesheet" href="style.css">
  <link href='https://fonts.googleapis.com/css?family=EB Garamond' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css?family=Open Sans' rel='stylesheet'>
</head>

<%- include('nav') %>

<body>
  <div class="change-page">
    <button>Edit Exhibition</button>
    <button>Presentable View</button>
  </div>
  
  <div class="tag-description">

    <% if (tag_display.length > 0) {
      tag_display.forEach(function(tag) {
        %>
        <h2 class="tag-description__title"><%-tag.tag_name%></h2>
        <p class="tag-description__info"><%-tag.tag_description%></p>
        <%
      })
    } else {
    %>
    <h2 class="tag-description__title">Exhibitions of Learning</h2>
    <%
    } 
    %>
  </div>
  
  <!--   video section -->
  <div class="highlights">
    <h1 class = "highlights_text">Recent Exhibition of Learning</h1>
      <div class="video_highlights">
        <% if (exhibitions.length > 0) {
          exhibitions.forEach(function(exhibition) {
            %>
            <div class="video">
            <div class="video_thumbnail"><%-exhibition.video_html_code%>
            </div>
            <div class="video_tags"><%=exhibition.course_number%>: <%=exhibition.course_name%>
              <%
                exhibition.skills.forEach(function(skill) {
                  %>
                  | <%=skill%>
                  <%
                })
              %>
            </div>
            <div class="video_text">
              <div class="student_name"><%= exhibition.first_name %> <%= exhibition.last_name %></div>
              <div class="upload_date">
                <% if (exhibition.term == 1) {
                  %>
                  Fall Term, 
                  <%
                } else if (exhibition.term == 2) {
                  %>
                  Winter Term, 
                  <%
                } else if (exhibition.term == 3) {
                  %>
                  Spring Term, 
                  <%
                }%>
                <%= exhibition.academic_year%> 
              </div>
            </div>
          </div>
          <%
        })
      }
      %>
    </div>
  </div>
</body>
  
<%- include('foot') %>